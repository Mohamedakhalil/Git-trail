#include <iostream>
#include <string>
using namespace std;

void printBoard(int board[4][4]);
bool theBoardSolver(int board[4][4], int col);

void printBoard(int board[4][4]) {
  int i;
  for (i = 0; i < 4; i++) {
    for (int j = 0; j < 4; j++) {
      if (board[i][j] == 1) {
        cout << "Q\t";
       }
      else {
        cout << "_\t";
       }
     }
  cout << "\n";
  }
}



bool toPlaceOrNotToPlace(int board[4][4], int row, int col);
//to check whether to place the queen or not



bool toPlaceOrNotToPlace(int board[4][4], int row, int col)
    {
    int i, j;
    for (i = 0; i < col; i++)
    {
        if (board[row][i] == 1)
            return false;
    }
    for (i = row, j = col; i >= 0 && j >= 0; i--, j--)
    {
        if (board[i][j] == 1)
            return false;
    }
    for (i = row, j = col; j >= 0 && i < 4; i++, j--) 
    {
        if (board[i][j] == 1)
            return false;
    }
            return true;
    }
theBoardSolver(int board[4][4], int col) {
  if (col >= 4)
      return true;
  for (int i = 0; i < 4; i++) {
    if (toPlaceOrNotToPlace(board, i, col)) {
      board[i][col] = 1;
      if (theBoardSolver(board, col + 1))
          return true;
      board[i][col] = 0;
      }
   }
   return false;
}

int main() {
  int board[4][4];
  if (!theBoardSolver(board, 0)) {
    cout << "Solution not found.";
  }
  printBoard(board);
}
